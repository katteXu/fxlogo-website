---
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "关于我们";

const identity = {
  firstName: "张",
  country: "中国",
  occupation: "学生",
  hobbies: ["阅读", "编程", "旅行"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;
---

<BaseLayout pageTitle={pageTitle}>
  <p>以下是关于我们的几个事实</p>
  <ul>
    <li>我叫{identity.firstName}</li>
    <li>我住在{identity.country}.我的职业是{identity.occupation}</li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          我有两个习惯：{identity.hobbies[0]}和{identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>我的技能是：</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
  {happy && <p>我非常乐于学习Astro</p>}
  {finished && <p>我完成了这节课程！</p>}
  {goal === 3 ? <p>我目标在三天内完成</p> : <p>我的目标不是三天</p>}
</BaseLayout>
